{
    "include": ["globals.d.ts", "."],
    "compilerOptions":
    {
        "noEmit": true,

        "target": "ESNext",
        "lib":
        [
            "DOM",
            "DOM.Iterable",
            "ESNext",
            "WebWorker"
        ],
        "types": ["template-literal-queryselectors", "chrome"],
        "typeRoots": ["./node_modules/@types"],

        "checkJs": true,
        "skipLibCheck": true
    },
    "typeAcquisition":
    {
        "enable": true
    }
}
